{
    "name": "dion-homepage",
    "description": "Dion's website",
    "version": "1.1.0",
    "keywords": [],
    "author": "dionannd",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "next dev -H 0.0.0.0",
        "build": "next build",
        "start": "next start",
        "prettier": "prettier --write .",
        "linter": "eslint \"**/*.{js,jsx,ts,tsx,yml,yaml}\"",
        "lint:fix": "eslint --fix \"**/*.{js,jsx,ts,tsx,yml,yaml}\"",
        "prettier:check": "prettier --check '**/*.{ts,tsx,js,jsx,json,md,mdx}'",
        "prettier:fix": "prettier --write '**/*.{ts,tsx,js,jsx,json,md,mdx}'"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    },
    "dependencies": {
        "@chakra-ui/icons": "^1.1.7",
        "@chakra-ui/react": "^1.8.8",
        "@emotion/react": "^11.9.0",
        "@emotion/styled": "^11.8.1",
        "framer-motion": "^6.3.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.5",
        "next": "^12.1.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-icons": "^4.3.1",
        "three": "^0.135.0"
    },
    "devDependencies": {
        "eslint": "^8.13.0",
        "eslint-config-next": "12.1.5",
        "eslint-config-prettier": "^8.3.0",
        "prettier": "^2.6.2"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,yml,yaml}": [
            "yarn prettier:fix",
            "yarn linter",
            "yarn lint:fix"
        ],
        "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
    }
}